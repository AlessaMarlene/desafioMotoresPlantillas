<div class="entry">

<h2>Lista de productos</h2>

{{#if prod}}
    <table class="table table-striped table-hover">
        <thead>
            <tr>
            <th scope="col">ID</th>
            <th scope="col">Title</th>
            <th scope="col">Price</th>
            <th scope="col">Imagen</th>
            </tr>
        </thead>
        <tbody>
            {{#each prod}}
                <tr>
                    <th scope="row">{{ this.id }}</th>
                    <td>{{ this.title }}</td>
                    <td>{{ this.price }}</td>
                    <td><img src="{{ this.thumbnail }}" alt="{{ this.title }}" width="25"></td>
                </tr>
            {{/each}}
        </tbody>
    </table>

{{else}}
    <h4> No hay productos </h4>
{{/if}}
</div>